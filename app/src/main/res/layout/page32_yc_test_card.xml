<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ks_page32"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">
    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/ks_page32_toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/deepSkyBlue"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ks_page32_back"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="match_parent">

            <ImageView style="@style/Icon_back" />

        </LinearLayout>

        <TextView
            style="@style/Middle_content"
            android:text="@string/testCard" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ks_page32_toolBar"
        android:background="@color/white"
        android:orientation="vertical">
        <!--显示类型-->
        <TextView
            android:id="@+id/ks_page32_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10dp"
            android:textColor="@color/dimGray_m"
            android:textSize="@dimen/size_15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0.5dp"
            android:background="@color/light_grey" />
        <!--主要内容-->
        <GridView
            android:id="@+id/ks_page32_gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:numColumns="5"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0.5dp"
            android:background="@color/light_grey" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/deepSkyBlue"
        android:gravity="center">

        <TextView
            android:id="@+id/ks_page32_tv2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/handIn"
            android:textColor="@color/white"
            android:textSize="@dimen/size_15sp" />
    </RelativeLayout>

</RelativeLayout>

