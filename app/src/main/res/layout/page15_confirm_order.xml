<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page15"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/ks_page15_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ks_page15_back"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10dp"
                android:background="@drawable/ico_back_grey" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/confirm_order"
            android:textColor="@color/dimGray_m"
            android:textSize="@dimen/size_16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/ks_page15_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5dp"
        android:layout_below="@id/ks_page15_toolbar"
        android:background="@color/light_grey" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ks_page15_view1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <!--地址-->
            <LinearLayout
                android:id="@+id/ks_page15_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100dp"
                android:orientation="horizontal">
                <!--左-->
                <LinearLayout
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/size_25dp"
                        android:layout_height="@dimen/size_25dp"
                        android:background="@drawable/ico_position"
                        android:scaleType="fitXY" />
                </LinearLayout>
                <!--中-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ks_page15_line_notEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <!--中上-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:paddingRight="@dimen/size_10dp">

                            <TextView
                                android:id="@+id/ks_page15_tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/dimGray_m"
                                android:textSize="@dimen/size_15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ks_page15_tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/dimGray_m"
                                android:textSize="@dimen/size_15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <!--中下-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/ks_page15_tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="@color/dimGray"
                                android:textSize="@dimen/size_14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/ks_page15_tv9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/dimGray"
                                android:textSize="@dimen/size_14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ks_page15_line_empty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/state_empty"
                            android:textColor="@color/dimGray_m"
                            android:textSize="@dimen/size_15sp" />
                    </LinearLayout>

                </LinearLayout>
                <!--右-->
                <LinearLayout
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:background="@drawable/ico_more"
                        android:scaleType="fitXY" />
                </LinearLayout>

            </LinearLayout>
            <!--地址下面的内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_0.5dp"
                    android:background="@color/light_grey" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_10dp"
                    android:background="@color/whiteSmoke" />

                <com.example.wdks.newwdksapp.tools.MyListView
                    android:id="@+id/ks_page15_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_0.5dp"
                    android:background="@color/light_grey" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_30dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/size_10dp"
                    android:paddingRight="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_price"
                        android:textColor="@color/dimGray"
                        android:textSize="@dimen/size_15sp" />

                    <TextView
                        android:id="@+id/ks_page15_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/deep_red"
                        android:textSize="@dimen/size_15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/ks_page15_tv4"
                        android:text="@string/price_ying"
                        android:textColor="@color/deep_red"
                        android:textSize="@dimen/size_14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/size_10dp"
                    android:paddingRight="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/freight"
                        android:textColor="@color/dimGray"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/ks_page15_tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/deep_red"
                        android:textSize="@dimen/size_14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/ks_page15_tv5"
                        android:text="@string/price_ying"
                        android:textColor="@color/deep_red"
                        android:textSize="@dimen/size_14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/size_10dp"
                    android:paddingRight="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distribution_mode"
                        android:textColor="@color/dimGray"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/ks_page15_tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/dimGray"
                        android:textSize="@dimen/size_14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/size_10dp"
                    android:paddingRight="@dimen/size_10dp">

                    <TextView
                        android:id="@+id/ks_page15_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_message"
                        android:textColor="@color/dimGray"
                        android:textSize="@dimen/size_14sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:layout_toRightOf="@id/ks_page15_message"
                        android:background="@drawable/edit_message_shape"
                        android:ellipsize="end"
                        android:gravity="top"
                        android:lines="3"
                        android:maxLength="50"
                        android:maxLines="3"
                        android:padding="@dimen/size_5dp"
                        android:textColor="@color/dimGray"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/size_14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60dp"
                    android:background="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!--底部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/whiteSmoke"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gong"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/size_13sp" />

            <TextView
                android:id="@+id/ks_page15_tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_marginRight="@dimen/size_5dp"
                android:textColor="@color/red"
                android:textSize="@dimen/size_14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/U."
                android:textColor="@color/dimGray"
                android:textSize="@dimen/size_13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_prices"
                android:textColor="@color/red"
                android:textSize="@dimen/size_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ks_page15_tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/size_15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/size_10dp"
            android:paddingTop="@dimen/size_10dp">

            <Button
                android:id="@+id/ks_page15_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_pay_shape"
                android:text="@string/pay_now"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15sp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
