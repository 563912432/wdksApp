<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ks_page1_book_gridView_grid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/size_10dp">
    <!--左边图片-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/size_90dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ks_page1_book_gridView_iv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

    </LinearLayout>
    <!--右边文字介绍-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size_5dp">
        <!--上-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/ks_page1_book_gridView_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/size_15sp" />
        </LinearLayout>
        <!--中-->
        <RelativeLayout
            android:id="@+id/ks_page1_boo_gridView_line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!--￥-->
            <TextView
                android:id="@+id/ks_page1_book_gridView_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/size_13sp" />
            <!--价格-->
            <TextView
                android:id="@+id/ks_page1_book_gridView_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ks_page1_book_gridView_price"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/size_13sp" />

            <View
                android:id="@+id/ks_page1_book_gridView_view"
                android:layout_width="@dimen/size_50dp"
                android:layout_height="@dimen/size_0.5dp"
                android:layout_centerVertical="true"
                android:background="@color/darkGray"
                android:visibility="visible" />
        </RelativeLayout>
        <!--下-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--￥-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_ying"
                android:textColor="@color/deep_red"
                android:textSize="@dimen/size_13sp"
                android:textStyle="bold" />
            <!--现售价-->
            <TextView
                android:id="@+id/ks_page1_book_gridView_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/deep_red"
                android:textSize="@dimen/size_13sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>