<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:focusable="false"
    android:padding="7dp">

    <!--左边图片-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center">

        <ImageView
            android:id="@+id/ks_page4_expandList2_c_iv1"
            android:layout_width="@dimen/size_120dp"
            android:layout_height="@dimen/size_80dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:scaleType="fitXY" />

    </LinearLayout>

    <!--右边文字-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <!--上-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/ks_page4_expandList2_c_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_14sp" />

        </LinearLayout>
        <!--中-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ks_page4_expandList2_c_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/size_13sp" />

            <TextView
                android:id="@+id/ks_page4_expandList2_c_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/size_13sp" />

            <TextView
                android:id="@+id/ks_page4_expandList2_c_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/size_13sp" />

        </LinearLayout>
        <!--下-->
        <LinearLayout
            android:id="@+id/ks_page4_expandList2_c_goon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ks_page4_expandList2_c_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/deepSkyBlue"
                android:textSize="@dimen/size_12sp" />

            <ImageView
                android:layout_width="@dimen/size_10dp"
                android:layout_height="@dimen/size_10dp"
                android:background="@drawable/ico_double_go" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
