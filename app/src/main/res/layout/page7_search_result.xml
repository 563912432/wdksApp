<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/lightSkyBlue"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ks_page7_iv1"
            style="@style/Icon_back" />
        <!--搜索框-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_30dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@drawable/edit_search_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_30dp"
                android:background="@drawable/ico_search_gray" />

            <TextView
                android:id="@+id/ks_page7_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dimGray_m"
                android:textSize="@dimen/size_13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ks_page7_buy_car"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ks_page7_iv2"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ico_buy_car_white" />

            <com.readystatesoftware.viewbadger.BadgeView
                android:id="@+id/ks_page7_badgeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="@dimen/size_10dp" />

        </LinearLayout>


    </LinearLayout>

    <com.example.wdks.newwdksapp.tools.MySwipeRefreshLayout
        android:id="@+id/ks_page7_swRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/ks_page7_listView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:scrollbars="none">

        </ListView>

    </com.example.wdks.newwdksapp.tools.MySwipeRefreshLayout>

</LinearLayout>

