<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ks_page2_pop_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_5dp"
        android:background="@color/whiteSmoke"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_10dp"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingTop="@dimen/size_10dp">

        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:background="@drawable/ico_call" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5dp"
            android:text="@string/consult_phone"
            android:textColor="@color/purple"
            android:textSize="@dimen/size_15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5dp"
        android:layout_marginRight="@dimen/size_5dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/ks_page2_pop_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_5dp"
        android:background="@color/whiteSmoke"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_10dp"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingTop="@dimen/size_10dp">

        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:background="@drawable/ico_qq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5dp"
            android:text="@string/consult_qq"
            android:textColor="@color/green"
            android:textSize="@dimen/size_15sp" />

    </LinearLayout>

</LinearLayout>
