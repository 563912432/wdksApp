<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ks_page3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--标题栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:background="@color/deepSkyBlue"
            android:gravity="center">

            <!--居中 放按钮-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ks_page3_btn1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_news_shape1"
                    android:text="最新资讯"
                    android:textColor="@color/deepSkyBlue1"
                    android:textSize="@dimen/size_14sp" />

                <Button
                    android:id="@+id/ks_page3_btn2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_news_shape2"
                    android:text="官方公告"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14sp" />

            </LinearLayout>

        </LinearLayout>
        <!--详细内容-->
        <FrameLayout
            android:id="@+id/ks_page3_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
