<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/ks_page33_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/deepSkyBlue">

        <LinearLayout
            android:id="@+id/ks_page33_back"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp">

            <ImageView style="@style/Icon_back" />

        </LinearLayout>

        <TextView
            android:id="@+id/ks_page33_tv1"
            style="@style/Middle_content"
            android:text="@string/look_result" />

        <LinearLayout
            android:id="@+id/ks_page33_share"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/ks_page33_iv2"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:background="@drawable/ico_share" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/ks_page33_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5dp"
        android:layout_below="@id/ks_page33_toolbar"
        android:background="@color/light_grey" />

    <ScrollView
        android:id="@+id/ks_page33_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ks_page33_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--答对-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_150dp"
                android:background="@color/deepSkyBlue"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="练习类型："
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_13sp" />

                    <TextView
                        android:id="@+id/ks_page33_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:text="答对"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_13sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/ks_page33_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_70dp" />

                        <TextView
                            android:id="@+id/ks_page33_tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size_10dp"
                            android:paddingBottom="@dimen/size_10dp"
                            android:text="道"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/ks_page33_tv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@+id/ks_page33_tv4"
                            android:paddingBottom="@dimen/size_10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_13sp" />

                        <TextView
                            android:id="@+id/ks_page33_tv6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@+id/ks_page33_tv5"
                            android:paddingBottom="@dimen/size_10dp"
                            android:text="/"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_13sp" />

                        <TextView
                            android:id="@+id/ks_page33_tv7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@+id/ks_page33_tv6"
                            android:paddingBottom="@dimen/size_10dp"
                            android:text="道"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_13sp" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
            <!--答题卡-->
            <LinearLayout
                android:id="@+id/ks_page33_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ks_page33_right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ks_page33_tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp"
                    android:text="@string/testCard"
                    android:textColor="@color/dimGray_m"
                    android:textSize="@dimen/size_15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_0.5dp"
                    android:background="@color/light_grey" />
                <!--答题选项-->
                <com.example.wdks.newwdksapp.tools.MyGridView
                    android:id="@+id/ks_page33_gridView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="5"
                    android:padding="@dimen/size_10dp"
                    android:scrollbars="none" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!--底部按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/deepSkyBlue"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ks_page33_btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/deepSkyBlue"
            android:text="错题解析"
            android:textColor="@color/white" />

        <View
            android:layout_width="@dimen/size_0.5dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <Button
            android:id="@+id/ks_page33_btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/deepSkyBlue"
            android:text="全部解析"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>

