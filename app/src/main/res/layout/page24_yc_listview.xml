<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/size_15dp"
    android:paddingLeft="@dimen/size_10dp"
    android:paddingRight="@dimen/size_10dp"
    android:paddingTop="@dimen/size_15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/ks_page24_listView_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dimGray_m"
            android:textSize="@dimen/size_15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:id="@+id/ks_page24_listView_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/gong"
            android:textColor="@color/dimGray"
            android:textSize="@dimen/size_14sp" />

        <TextView
            android:id="@+id/ks_page24_listView_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ks_page24_listView_tv2"
            android:textColor="@color/dimGray"
            android:textSize="@dimen/size_14sp" />

        <TextView
            android:id="@+id/ks_page24_listView_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ks_page24_listView_tv3"
            android:text="道题"
            android:textColor="@color/dimGray"
            android:textSize="@dimen/size_14sp" />

        <TextView
            android:id="@+id/ks_page24_listView_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ks_page24_listView_tv4"
            android:textColor="@color/dimGray"
            android:textSize="@dimen/size_14sp" />

        <ImageView
            android:layout_width="@dimen/size_25dp"
            android:layout_height="@dimen/size_25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ico_test" />

    </RelativeLayout>

</LinearLayout>
