<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--上-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_20dp">

        <!--上上-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingRight="@dimen/size_10dp">

            <TextView
                android:id="@+id/ks_page16_listView_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dimGray_m"
                android:textSize="@dimen/size_15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ks_page16_listView_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/dimGray_m"
                android:textSize="@dimen/size_15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!--上下-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/ks_page16_listView_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/size_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/ks_page16_listView_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/size_14sp" />

        </LinearLayout>

    </LinearLayout>
    <!--下-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5dp"
        android:background="@color/light_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10dp">
        <!--左-->
        <LinearLayout
            android:id="@+id/ks_page16_listView_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ks_page16_listView_iv1"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_default"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/size_14sp" />
        </LinearLayout>
        <!--右-->
        <LinearLayout
            android:id="@+id/ks_page16_listView_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ks_page16_listView_iv2"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:background="@drawable/ico_delete_box" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/size_14sp" />
        </LinearLayout>
        <!--中-->
        <LinearLayout
            android:id="@+id/ks_page16_listView_line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_toLeftOf="@id/ks_page16_listView_line2"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ks_page16_listView_iv3"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:background="@drawable/ico_editor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/size_14sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
