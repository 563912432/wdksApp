<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ks_page39"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <!--上：标题栏-->
    <RelativeLayout
        android:id="@+id/ks_page39_tool"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ks_page39_back"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10dp"
                android:background="@drawable/ico_back_grey" />

        </LinearLayout>

        <TextView
            android:id="@+id/ks_page39_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单管理"
            android:textColor="@color/dimGray"
            android:textSize="@dimen/size_16sp" />
    </RelativeLayout>

    <!--中-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_20dp"
        android:paddingRight="@dimen/size_20dp">

        <TextView
            android:id="@+id/ks_page39_book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/darkGray"
            android:gravity="center"
            android:padding="@dimen/size_10dp"
            android:text="@string/book"
            android:textColor="@color/white"
            android:textSize="@dimen/size_14sp" />

        <TextView
            android:id="@+id/ks_page39_exam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_weight="1"
            android:background="@color/whiteSmoke"
            android:gravity="center"
            android:padding="@dimen/size_10dp"
            android:text="@string/exam"
            android:textColor="@color/dimGray"
            android:textSize="@dimen/size_14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@color/light_grey" />

    <FrameLayout
        android:id="@+id/ks_page39_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
